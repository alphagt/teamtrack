<%= simple_form_for(@project) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <% if @project.active %>
    	<h4>Status:  Active<h4>
    <% else %>
    	<h4>Status:  In-Active<h4>
    <% end %>
    <%= f.association :owner, :as => :select %>
    <%= f.input :description %>
    <%= f.input :fixed_resource_budget %>
    <%= f.input :category %>
  </div>

  <div class="form-actions">
  	<div style="float:left">
    	<%= f.button :submit %>
  	</div>
<% end %>
