<p id="notice"><%= notice %></p>

<p>
  <b>Is fixed:</b>
  <%= @assignment.is_fixed %>
</p>

<p>
  <b>Fiscal year:</b>
  <%= @assignment.set_period.fiscal_year %>
</p>

<p>
  <b>Week:</b>
  <%= period_to_date(@assignment.set_period) %>
</p>

<p>
  <b>Effort:</b>
  <%= @assignment.effort %>
</p>

<p>
  <b>User:</b>
  <%= link_to User.find(@assignment.user_id).name, user_path(@assignment.user)  %>
</p>

<p>
  <b>Project:</b>
  <%= Project.find(@assignment.project_id).name %>
</p>


