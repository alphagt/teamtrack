<h3>User List</h3>
<table border="1" cellpadding="10">
  <tr>
    <th>Name</th>
    <th>Admin?</th>
    <th>Manager</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= link_to user.name, user_path(user)  %></td>
    <td><%= user.admin.to_s %></td>
    <td><%= user.manager.name if user.manager %></td>
  </tr>
<% end %>
</table>
